<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="Gauge">
        <attr name="totalNicks" format="integer" />
        <attr name="valuePerNick" format="float" />
        <attr name="majorNickInterval" format="integer" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="intScale" format="boolean" />
        <attr name="initialValue" format="float" />
        <attr name="labelTextSize" format="float" />
        <attr name="faceColor" format="integer" />
        <attr name="scaleColor" format="integer" />
        <attr name="needleShadow" format="boolean" />
        <attr name="needleColor" format="integer" />
        <attr name="textSize" format="float" />
        <attr name="upperText" format="string" />
        <attr name="lowerText" format="string" />
        <attr name="upperTextSize" format="float" />
        <attr name="lowerTextSize" format="float" />

    </declare-styleable>

    <string name="invalid_number_of_nicks">Total nicks (%1$d) should be a multiple of major nick interval (%2$d). Scale may be distorted.</string>
    <string name="invalid_min_max_ratio">Sum of min (%1$f) and max (%2$f) should be divisible by 2. Scale may be distorted.</string>
    <string name="invalid_min_max">Sum of min (%1$f) and max (%2$f) should be a multiple of value per nick (%3$f). Scale may be distorted.</string>
    <string name="scale_ok">Scale should be okay.</string>

</resources>